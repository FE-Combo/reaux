{
  "compilerOptions": {
    "baseUrl": "../packages/reaux-native",
    "outDir": "../build/reaux-native/output",
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "sourceMap": true,
    "inlineSources": true,
    "declaration": true,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "importHelpers": true,
    "jsx": "react-native",
    "lib": ["es2017", "esnext"],
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "suppressImplicitAnyIndexErrors": true,
    "downlevelIteration": true,
    "skipLibCheck": true
  },
  "include": ["../packages/reaux-native"],
  "exclude": ["node_modules", "../packages/reaux-native/__test__"]
}
