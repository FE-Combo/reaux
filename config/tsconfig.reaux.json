{
  "compilerOptions": {
    "baseUrl": "../packages/reaux",
    "outDir": "../build/reaux/output",
    "module": "esnext",
    "target": "es5",
    "moduleResolution": "node",
    "sourceMap": true,
    "jsx": "react",
    "lib": ["es2017"],
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "importHelpers": true,
    "noImplicitAny": true,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "suppressImplicitAnyIndexErrors": true,
    "esModuleInterop": true,
    "inlineSources": true,
    "declaration": true, // 所有function都需要返回返回类型
    "skipLibCheck": true
  },
  "include": ["../packages/reaux"],
  "exclude": ["node_modules", "../packages/reaux/__test__"]
}
