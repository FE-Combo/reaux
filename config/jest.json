{
  "verbose": true,
  "rootDir": "..",
  "roots": ["<rootDir>/packages/"],
  "transform": {
    "^.+\\.tsx?$": "ts-jest",
    "^.+\\.jsx?$": "babel-jest"
  },
  "testRegex": "\\.test\\.tsx?$",
  "testEnvironmentOptions": {
    "url": "http://127.0.0.1"
  },
  "moduleFileExtensions": ["ts", "tsx", "js"],
  "moduleDirectories": ["node_modules"],
  "globals": {
    "ts-jest": {
      "tsConfig": "./tsconfig.json",
      "diagnostics": {
        "ignoreCodes": ["TS7025"]
      }
    }
  }
}
