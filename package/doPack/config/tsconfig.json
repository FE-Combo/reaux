{
  "compilerOptions": {
    "baseUrl": "../src",
    "outDir": "../output/out/src",
    "module": "esnext",
    "target": "es5",
    "moduleResolution": "node",
    "lib": ["es2015"],
    "sourceMap": true,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "importHelpers": true,
    "noImplicitAny": true,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "suppressImplicitAnyIndexErrors": true,
    "declaration": true
  },
  "include": ["../src"]
}
