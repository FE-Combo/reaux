{
  "$schema": "node_modules/lerna/schemas/lerna-schema.json",
  "npmClient": "yarn",
  "useWorkspaces": true,
  "packages": ["packages/*"],
  "command": {
    "publish": {
      "message": "chore(release): %s",
      "npmClient": "npm",
      "allowBranch": ["master"],
      "registry": "https://registry.npmjs.org/"
    }
  },
  "version": "independent"
}
